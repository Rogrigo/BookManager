@model Book

<h1>Are you sure you want to delete this book?</h1>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BookID" />
    <div class="container mt-5">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.BookImageUrl" alt="Book Cover" class="book-cover" style="width: 225px; height: 300px; object-fit: cover;">
            </div>
            <div class="col-md-8 pl-md-2">
                <h1 class="mb-3">@Model.Title</h1>
                <div>
                    <h5>Book Details</h5>
                    <ul class="list-unstyled">
                        <li><strong>Genre:</strong> @Model.Genre</li>
                        <li><strong>Author:</strong> @Model.Author.AuthorName @Model.Author.AuthorSurname</li>
                        <li><strong>Rating:</strong> @Model.Rating <i class="fas fa-star"></i></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="float-right mt-3">
        <input type="submit" value="Confirm" class="btn btn-danger ml-2" />
        <a class="btn btn-secondary" asp-area="" asp-controller="Book" asp-action="Index">Cancel</a>
    </div>
</form>
